{
   "background_page": "background.html",
   "browser_action": {
      "default_icon": "icons/set1/not_logged_in.png",
      "default_title": "Notifier Plus for Google Mail™",
      "name": "Notifier Plus for Google Mail™",
      "popup": {
         "path": "popup.html"
      }
   }, 
   "content_scripts": [ {
      "all_frames": true,
      "js": [ "assets/js/mailto.js" ],
      "matches": [ "http://*/*", "https://*/*" ]
   } ],
   "description": "Displays the number of unread messages in your Gmail and Google Apps inbox. Preview mail, read, delete, archive and mark as spam!",
   "icons": {
        "32": "assets/img/icon_32.png",
        "48": "assets/img/icon_48.png",
        "128": "assets/img/icon_128.png"
   },
   "name": "Notifier Plus for Google Mail™",
   "options_page": "options.html",
   "permissions": [ 
      "background",
      "notifications", 
      "tabs",
      "http://*/*", 
      "https://*/*", 
      "http://*.google.com/*", 
      "https://*.google.com/*" 
   ],
   "version": "1.3.2"
}
